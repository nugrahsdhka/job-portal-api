generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum untuk Role User
enum Role {
  EMPLOYER
  APPLICANT
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(APPLICANT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi: Satu User (Employer) bisa punya banyak Jobs
  jobs      Job[]
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  companyName String
  location    String
  salary      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke User
  employerId  Int
  employer    User     @relation(fields: [employerId], references: [id])
}